{
  "$schema": "https://turbo.build/schema.json",
  "globalEnv": [
    "DATABASE_URL",
    "NODE_ENV",
    "WHAPIFY_ACCOUNT",
    "WHAPIFY_SECRET",
    "ADMIN_URL",
    "WEB_URL",
    "CRON_SECRET",
    "AWS_REGION",
    "AWS_ACCESS_KEY_ID",
    "AWS_SECRET_ACCESS_KEY",
    "AWS_S3_BUCKET",
    "CLOUDFLARE_ACCOUNT_ID",
    "HOST",
    "TZ"
  ],
  "daemon": false,
  "globalDependencies": ["**/.env.*local"],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": [".next/**", "!.next/cache/**"]
    },
    "@repo/ui#build": {
      "dependsOn": []
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "dev": {
      "cache": false,
      "persistent": true,
      "inputs": ["$TURBO_DEFAULT$", ".env"]
    }
  }
}
