{
  "$schema": "https://turbo.build/schema.json",
  "globalEnv": ["DATABASE_URL", "WHAPIFY_ACCOUNT", "WHAPIFY_SECRET", "HOST"],
  "globalDependencies": ["**/.env.*local"],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": [".next/**", "!.next/cache/**"]
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "dev": {
      "cache": false,
      "persistent": true,
      "inputs": ["$TURBO_DEFAULT$", ".env"]
    }
  }
}
